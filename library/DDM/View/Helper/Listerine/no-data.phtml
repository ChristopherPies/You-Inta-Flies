if($this->displayTotalResults) {
    echo '<div style="clear:both; display:block; width:auto; font-weight:bold; margin-bottom:0px;" id="'.$this->id.'_total" class="lead">'.$this->totalItemCount.' result'.(($this->totalItemCount==1)?'':'s').'</div>';
